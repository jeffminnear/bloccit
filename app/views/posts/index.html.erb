<h1>All Posts</h1>

<% @posts.each_with_index do |post, i| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <% if i == 0 || i % 5 == 0 %>
          <p><%= link_to 'SPAM', post %>
        <% else %>
          <p><%= link_to post.title, post %></p>
        <% end %>
      </h4>
    </div>
  </div>
<% end %>
