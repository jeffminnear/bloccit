<div class="row">
  <div class="col-md-4">
    <!-- Instructions for creating an Advertisement -->
    <h4>Advertisement Guidelines</h4>
    <ul>
      <li>Do not use Markdown</li>
      <li>Only use whole dollar amounts in the price field (e.g. "30", not "29.99")</li>
      <li>Remember to click "Save"</li>
    </ul>
  </div>
  <div class="col-md-8">
    <!-- Advertisement entry form -->
    <%= form_for @advertisement do |f| %>
      <div class="form-group">
        <!-- TITLE -->
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter ad title" %>
      </div>
      <div class="form-group">
        <!-- COPY -->
        <%= f.label :copy %>
        <%= f.text_area :copy, class: "form-control", placeholder: "Enter ad copy" %>
      </div>
      <div class="form-group">
        <!-- PRICE -->
        <%= f.label :price %>
        <%= f.number_field :price, class: "form-control", placeholder: "Enter whole dollar price without dollar sign" %>
      </div>
      <div class="form-group">
        <!-- SUBMIT -->
        <%= f.submit "Save", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
